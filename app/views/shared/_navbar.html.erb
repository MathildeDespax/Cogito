<div class="navbar-cogito">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-cogito-logo" do %>
    <%= image_tag "logo.png"%>

  <% end %>

  <div class="navbar-cogito-right">

    <% if user_signed_in? %>

      <div class="navbar-cogito-item">
        <div class="dropdown">
          <i class="fa fa-bars fa-2x dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-cogito-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t("Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to quizzs_path do %>
                <i class="fa fa-question"></i> <%= t("My quizzes") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_quizz_path, methode: :get do %>
                <i class="fa fa-plus"></i> <%= t("Create a quiz") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_share_path, methode: :get do %>
                <i class="fa fa-share-alt"></i> <%= t("Share a quiz") %>
              <% end %>
            </li>
            <li>
              <%= link_to classrooms_path do %>
                <i class="fa fa-users"></i> <%= t("My classrooms") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t("Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-cogito-item navbar-cogito-link" %>

    <% end %>
  </div>

</div>

